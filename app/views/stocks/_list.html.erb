<div class="row">
  <div class="col-8">
    <table class="table table-bordered table-hover">
      <thead class="thead-dblue">
        <tr>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.ticker.upcase %></th>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <td><%= link_to user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'} do %>
                <%= fa_icon "trash", class: "btn btn-sm btn-danger text-white" %>
              <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
